<ul class="media-list">
    <% microposts.each do |micropost| %>
        <li class="media">
            <div class="media-left">
                <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options={ size: 50 }) %>" alt="">
            </div>
            <div class="media-body">
                <div>
                    <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
                </div>
                <div>
                    <p><%= micropost.content %></p>
                </div>
                <div>
                    <%= link_to 'お気に入り一覧', likes_user_path(micropost.user) %>
                    <%= render 'favorites/favorite_button', micropost: micropost %>
                </div>
                <div>
                    <% if current_user == micropost.user %>
                        <%= link_to "　投稿を削除　", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
                    <% end %>
                </div>
            </div>
        </li>
    <% end %>
    <%= paginate microposts %>
</ul>

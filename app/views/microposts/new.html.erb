<% if logged_in? %>
  <div class="row"> <!-- 投稿フォーム -->
    <aside class="col-md-4">
      <%= form_for(@micropost) do |f| %>
        <div class="form-group">
          ボトル名：<%= f.text_field :bottle_name, class: 'form-control', rows: 5, placeholder: "例：ロマネ・コンティ" %>
            生産者：<%= f.text_field :producer, class: 'form-control', rows: 5, placeholder: "例：ドメーヌ・ド・ラ・ロマネ・コンティ" %>
            生産地：<%= f.text_field :production_area, class: 'form-control', rows: 5, placeholder: "例：ブルゴーニュ地方, ヴォーヌ・ロマネ村" %>
              メモ：<%= f.text_area :content, class: 'form-control', rows: 5, placeholder: "香り、味わい、ぶどう品種、ヴィンテージ、値段、生産年、合わせた料理など..." %>
        </div>
        <div class="form-group">
          <!--<%= f.label :micropost, :tag_list %> -->
              タグ：<br>
                  <%= f.text_field :tag_list, value: @micropost.tag_list.join(','), class: "form-control", "data-role" => "tagsinput" , placeholder: "カンマ区切りで複数可"%><br>
              写真：<%= f.file_field :image, class: "image" %>
          <!--<p><%= f.check_box :remove_image %>画像を削除する</p> -->
        </div>
        <!--評価：
          <div class="evaluation">
              <input id="star1" type="radio" name="evaluation" value="5" />
              <label for="star1"><span class="text">最高</span>★</label>
              <input id="star2" type="radio" name="evaluation" value="4" />
              <label for="star2"><span class="text">良い</span>★</label>
              <input id="star3" type="radio" name="evaluation" value="3" />
              <label for="star3"><span class="text">普通</span>★</label>
              <input id="star4" type="radio" name="evaluation" value="2" />
              <label for="star4"><span class="text">悪い</span>★</label>
              <input id="star5" type="radio" name="evaluation" value="1" />
              <label for="star5"><span class="text">最悪</span>★</label>
          </div>
        -->
        <%= f.submit '投稿する', class: 'btn btn-primary btn-xs' %>
      <% end %>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary'%>
    </div>
  </div>
<% end %>

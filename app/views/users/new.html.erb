<div class="text-center">
  <h1>新規登録</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :profile_image, 'プロフィール画像' %>
        <%= f.file_field :profile_image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :name, 'ユーザーネーム' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "例：たろう" %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Eメール' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "例：taro@example.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: "6文字以上72文字以下" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "同上のパスワード" %>
      </div>
      <%= f.submit '登録する！', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>

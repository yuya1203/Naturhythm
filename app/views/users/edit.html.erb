<div class="text-center">
  <h1>プロフィール編集</h1>
  <br>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <% if @user.profile_image? %>
          <%= image_tag @user.profile_image.url %>
        <% else %>
          <img class="media-object img-rounded" src="<%= gravatar_url(@user,size: 350) %>" alt="">
        <% end %>
        <br>
        <br>
        <%= f.label :profile_image, 'プロフィール画像' %>
        <%= f.file_field :profile_image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :name, 'ユーザーネーム' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "例：たろう" %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Eメール' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "例：taro@example.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: "6文字以上72文字以下" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "同上のパスワード" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, '自己紹介' %>
        <%= f.text_area :introduction, class: 'form-control', placeholder: "簡単な自己紹介（空欄でも可）" %>
      </div>
      <%= f.submit '更新する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
<br>

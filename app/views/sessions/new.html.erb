<div class="text-center">
  <h1>ログイン</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'Eメール' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "例：taro@example.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: "6文字以上72文字以下" %>
      </div>
      <%= f.submit 'ログインする', class: 'btn btn-primary btn-block' %>
    <% end %>
    <br>
    <p>初めての方はこちら <%= link_to '新規登録', signup_path %></p>
  </div>
</div>
